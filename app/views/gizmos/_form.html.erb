<%= form_for(gizmo) do |f| %>
  <% if gizmo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(gizmo.errors.count, "error") %> prohibited this gizmo from being saved:</h2>

      <ul>
      <% gizmo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :color, style: "color: #{gizmo.color_contrast};background-color: #{gizmo.color}" %> <%= gizmo.color_int %><br>
    <%= f.check_box :status, style: "color: #{gizmo.color_contrast}; background-color: #{gizmo.stroke_color}" %>
    <%= f.text_field :color, style: "color: #{gizmo.color_contrast}; background-color: #{gizmo.stroke_color}" %>
  </div>

  <div class="field">
    <%= f.label :family %><br>
    <%= f.collection_select(:family_id, @families, :id, :name) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
